#!/usr/bin/make -f

LDFLAGS+=-Wl,-z,defs -Wl,--as-needed
override_dh_install:
	dh_install --list-missing

override_dh_auto_configure:
	NOCONFIGURE=1 xdt-autogen
	dh_auto_configure

override_dh_auto_clean:
	dh_auto_clean
	rm -f $$(find -name 'Makefile.in')
	rm -f aclocal.m4 config.* configure ltmain.sh

%:
	dh $@
